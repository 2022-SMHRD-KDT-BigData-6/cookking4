<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!--  DB정보를 가지고있는 properties파일과 맵핑(연결) -->
	<properties resource="cookking2/mapper/db.properties"></properties>
	
	<typeAliases>		
		<typeAlias type="cookking2.model.VO" alias="VO"/>
		<typeAlias type="cookking2.model.DAO" alias = "DAO"/>
		
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<!-- SQL문을 작성한 파일의 위치 -->
	<mappers>
		<mapper resource="cookking2/mapper/MemberMapper.xml" />
	</mappers>
</configuration>